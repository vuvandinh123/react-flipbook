{
    "name": "@vuvandinh203/react-flipbook",
    "version": "1.0.1",
    "description": "A powerful and customizable flipbook component for React with TypeScript support",
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        ".": {
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js",
            "types": "./dist/types/index.d.ts"
        },
        "./styles.css": "./dist/styles.css"
    },
    "scripts": {
        "build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs",
        "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --outDir dist/types",
        "build:esm": "rollup -c --environment FORMAT:esm",
        "build:cjs": "rollup -c --environment FORMAT:cjs",
        "clean": "rimraf dist",
        "dev": "rollup -c -w",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx}\"",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "release": "npm run build && npm publish --access public"
    },
    "keywords": [
        "react",
        "flipbook",
        "page-flip",
        "book",
        "magazine",
        "typescript",
        "animation",
        "3d",
        "interactive"
    ],
    "author": "Vu Van Dinh",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vuvandinh123/react-flipbook.git"
    },
    "bugs": {
        "url": "https://github.com/vuvandinh123/react-flipbook/issues"
    },
    "homepage": "https://vuvandinh123.github.io/react-flipbook/",
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "dependencies": {
        "page-flip": "^2.0.7"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.5",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@types/jest": "^29.5.11",
        "@types/page-flip": "^2.0.4",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.1.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^5.0.5",
        "rollup": "^4.9.1",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "rollup-plugin-postcss": "^4.0.2",
        "ts-jest": "^29.1.1",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3"
    }
}
